<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        class="com.company.sample.web.loginwindow.ExtAppLoginWindow"
        extends="/com/haulmont/cuba/web/app/loginwindow/loginwindow.xml"
        messagesPack="com.company.sample.web.loginwindow"
        xmlns:ext="http://schemas.haulmont.com/cuba/window-ext.xsd">
    <layout>
        <vbox id="loginWrapper"
              spacing="true">
            <vbox id="loginMainBox">
                <grid id="loginFormLayout">
                    <rows>
                        <row>
                            <label id="registerSpacer"/>
                            <linkButton id="registerBtn"
                                        caption="Register"
                                        invoke="onRegisterBtnClick"/>
                        </row>
                    </rows>
                </grid>
            </vbox>
        </vbox>
    </layout>
</window>
